<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.UserMapper">

    <!-- 定义t_user表查询结果与User对象之间的映射关系 -->
    <resultMap id="userMap" type="org.example.domain.User">
        <id property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="age" column="age"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findUserById" parameterType="long" resultMap="userMap">
        SELECT t.id, t.user_name, t.age, t.create_time
        FROM t_user t WHERE t.id = #{id}
    </select>

</mapper>